{
  "folders":
  [
    {
      "follow_symlinks": true,
      "path": ".",
      "name": "TradeMan"
    }
  ],

  "build_systems": [
    {
      "name": "BitBar-TradeMan",
      "shell": true,
      "working_dir": "$project_path",
      "cmd": [
        "ruby ./traideman.rb"
      ],
      "variants": [
        {
          "name": "Exec",
          "cmd": [
            "ENV=dev ruby ./traideman.rb"
          ]
        },
        {
          "name": "Copy to HOME BitBar",
          "cmd": [
            "cp -f ./traideman.rb ~/.bitbar_plugins/traideman.rb"
          ]
        },
        {
          "name": "Remove from HOME BitBar",
          "cmd": [
            "rm ~/.bitbar_plugins/traideman.rb"
          ]
        },
        {
          "name": "To BASE64",
          "cmd": [
            "base64 -in $file"
          ]
        }
      ]
    }
  ],

  "settings": {
    "default_encoding": "UTF-8",
    "fallback_encoding": "UTF-8",
    "encoding": "UTF-8",
    "show_encoding": true,

    "font_size": 13,

    "tab_size": 2,
    "use_tab_stops": true,
    "translate_tabs_to_spaces": true
  }
}
